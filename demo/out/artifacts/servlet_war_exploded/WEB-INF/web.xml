<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>firstservlet</servlet-name>
        <servlet-class>com.web.FirstServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>firstservlet</servlet-name>
        <url-pattern>/furl</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>booksServlet</servlet-name>
        <servlet-class>com.web.BookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    <servlet-name>booksServlet</servlet-name>
    <url-pattern>/bookservlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>userservlet</servlet-name>
        <servlet-class>com.web.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userservlet</servlet-name>
        <url-pattern>/userservlet</url-pattern>
    </servlet-mapping>
</web-app>
